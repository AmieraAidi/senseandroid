<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"


        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/time"
                android:text=""
                android:textColor="#000000"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"/>

            <ImageView
              android:id="@+id/refresh"
                android:src="@mipmap/refresh"
                android:layout_gravity="end"
                android:textColor="#0331a4"
                android:text="Completed Decomm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:layout_gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:textStyle="bold"
                android:background="#FFCC99"
                android:layout_marginLeft="10dp"
                android:text="Total Cabinet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="Completed Decomm"
                android:background="#FFCC99"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/totalcabinetbtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#800000"
                android:gravity="center"
                android:text="HELLO"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <Button
                android:id="@+id/completed"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#800000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="HELLO"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:background="#FFCC99"
                android:layout_marginLeft="10dp"
                android:text="Total Blocked in NIS"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#FFCC99"
                android:text="Total AR Approved"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/inprogress"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#800000"
                android:gravity="center"
                android:text="yes sir"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:background="#800000"
                android:textColor="#ffffff"
                android:id="@+id/remaining"
                android:textSize="35dp"
                android:text="HELLO"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:background="#FFCC99"
                android:layout_marginLeft="10dp"
                android:text="Total Cabinet Dismantled"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#FFCC99"
                android:text="Total Plinth Recovered"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_marginLeft="10dp"
                android:background="#800000"
                android:textColor="#ffffff"
                android:id="@+id/money"
                android:text="HELLO"
                android:textSize="28dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#800000"
                android:textColor="#ffffff"
                android:id="@+id/vendor"
                android:text="HELLO"
                android:textSize="28dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>