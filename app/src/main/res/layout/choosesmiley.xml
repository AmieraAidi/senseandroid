<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <RadioGroup
        android:id="@+id/toggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <RadioButton
            android:id="@+id/imagetoggle1"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/button_selector"
            android:gravity="center_horizontal"
            android:textOff="1"
            android:textOn="1"
            android:layout_weight="0.1"
            android:button="@android:color/transparent"

            />

        <RadioButton
            android:id="@+id/imagetoggle2"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/button_selector"
            android:gravity="center_horizontal"
            android:textOff="2"
            android:textOn="2"
            android:layout_weight="0.1"
            android:button="@android:color/transparent"
            />

        <RadioButton
            android:id="@+id/imagetoggle3"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/button_selector"
            android:gravity="center_horizontal"
            android:textOff="3"
            android:textOn="3"
            android:layout_weight="0.1"
            android:button="@android:color/transparent"
            />

        <RadioButton
            android:id="@+id/imagetoggle4"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/button_selector"
            android:gravity="center_horizontal"
            android:textOff="4"
            android:textOn="4"
            android:layout_weight="0.1"
            android:button="@android:color/transparent"
            />

        <RadioButton
            android:id="@+id/imagetoggle5"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/button_selector"
            android:gravity="center_horizontal"
            android:textOff="5"
            android:textOn="5"
            android:layout_weight="0.1"
            android:button="@android:color/transparent"
           />



            <RadioButton
                android:id="@+id/imagetoggle6"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal"
                android:textOff="6"
                android:textOn="6"
                android:layout_weight="0.1"
                android:button="@android:color/transparent"

                />
            <RadioButton
                android:id="@+id/imagetoggle7"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal"
                android:textOff="6"
                android:textOn="6"
                android:layout_weight="0.1"
                android:button="@android:color/transparent"

                />
            <RadioButton
                android:id="@+id/imagetoggle8"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal"
                android:textOff="6"
                android:textOn="6"
                android:layout_weight="0.1"
                android:button="@android:color/transparent"

                />
            <RadioButton
                android:id="@+id/imagetoggle9"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal"
                android:textOff="6"
                android:textOn="6"
                android:layout_weight="0.1"
                android:button="@android:color/transparent"

                />
            <RadioButton
                android:id="@+id/imagetoggle10"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal"
                android:textOff="6"
                android:textOn="6"
                android:layout_weight="0.1"
                android:button="@android:color/transparent"

                />

    </RadioGroup>

    </LinearLayout>
     <LinearLayout
         android:layout_weight="0.2"
         android:layout_width="0dp"
         android:layout_height="300dp"
         android:orientation="vertical"
         android:layout_marginTop="10dp"

         >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="1"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="2"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="3"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="4"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="5"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="6"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="7"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="8"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="9"

             android:layout_weight="0.1"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:text="10"

             android:layout_weight="0.1"/>
     </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/selectedsmiley"
        android:layout_weight="0.1"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/reasoncode"
        android:layout_weight="0.2"
       android:background="@color/grey_font"
        android:visibility="invisible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Submit"/>
</LinearLayout>